generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum Role {
  ADMIN
  MODERATOR
  JUDGE
  USER
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  name String? 
  email String @unique
  password String
  address String?
  role Role @default(USER)
  photoprofile String?
  photo Photo[]
}

model Photo {
  id Int @id @default(autoincrement())
  title String
  description String?
  path String
  user User @relation(fields: [userid], references: [id])
  userid Int
  // contest Contest @relation(fields: [contestid], references: [id])
